@model List<Shared.Dtos.ClienteDTO>
@{
    ViewData["Title"] = "Clientes";
}

<style>
    body {
        background: #00bfae;
        min-height: 100vh;
        margin: 0;
        font-family: 'Segoe UI', Arial, sans-serif;
    }
    .clientes-container {
        max-width: 900px;
        margin: 40px auto;
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.18);
        padding: 32px 40px;
    }
    .clientes-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #009688;
        margin-bottom: 24px;
        text-align: left;
    }
    .clientes-form {
        margin-bottom: 24px;
    }
    .clientes-form label {
        display: block;
        margin-bottom: 6px;
        font-weight: 500;
    }
    .clientes-form input[type="text"], .clientes-form input[type="number"] {
        width: 100%;
        padding: 8px 10px;
        border-radius: 6px;
        border: 1px solid #bdbdbd;
        font-size: 1rem;
        margin-bottom: 12px;
    }
    .clientes-actions {
        display: flex;
        gap: 12px;
        margin-bottom: 18px;
    }
    .clientes-actions button {
        background: #009688;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 10px 18px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
    }
    .clientes-actions button:hover {
        background: #00796b;
    }
    .clientes-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 18px;
    }
    .clientes-table th, .clientes-table td {
        border: 1px solid #bdbdbd;
        padding: 10px;
        text-align: center;
    }
    .clientes-table th {
        background: #009688;
        color: #fff;
    }
    .volver-btn {
        float: right;
        background: #009688;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 10px 18px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
    }
    .volver-btn:hover {
        background: #00796b;
    }
</style>

<div class="clientes-container">
    <div class="clientes-title">Clientes</div>
    <form asp-action="Guardar" method="post" class="clientes-form">
        <label for="nombre">Nombre</label>
        <input type="text" id="nombre" name="nombre" required />
        <label for="telefono">Teléfono</label>
        <input type="number" id="telefono" name="telefono" required />
        <div class="clientes-actions">
            <button type="submit">Guardar</button>
        </div>
    </form>
    <table class="clientes-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Teléfono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Cliente_ID</td>
                <td>
                    <form asp-action="Modificar" method="post" style="display:inline;">
                        <input type="hidden" name="clienteId" value="@cliente.Cliente_ID" />
                        <input type="text" name="nombre" value="@cliente.Nombre" required style="width:120px;" />
                        <input type="number" name="telefono" value="@cliente.NumeroTelefono" required style="width:120px;" />
                        <button type="submit">Modificar</button>
                    </form>
                </td>
                <td>
                    <form asp-action="Eliminar" method="post" style="display:inline;">
                        <input type="hidden" name="clienteId" value="@cliente.Cliente_ID" />
                        <button type="submit" onclick="return confirm('¿Eliminar cliente?')">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <button class="volver-btn" onclick="window.location.href='@Url.Action("Index", "Home")'">Volver</button>
</div>